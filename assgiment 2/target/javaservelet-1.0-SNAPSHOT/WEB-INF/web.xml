<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--  khai báo như route   -->
    <servlet>
        <servlet-name>ListFood</servlet-name>
        <servlet-class>com.example.javsvlet.controller.ListFood</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListFood</servlet-name>
        <url-pattern>/admin/list-food</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListCategory</servlet-name>
        <servlet-class>com.example.javsvlet.controller.ListCategory</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListCategory</servlet-name>
        <url-pattern>/admin/list-category</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateNewFood</servlet-name>
        <servlet-class>com.example.javsvlet.controller.CreatNewFood</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateNewFood</servlet-name>
        <url-pattern>/admin/create-food</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateCategory</servlet-name>
        <servlet-class>com.example.javsvlet.controller.CreatCategory</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateCategory</servlet-name>
        <url-pattern>/admin/create-category</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditFood</servlet-name>
        <servlet-class>com.example.javsvlet.controller.EditFood</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditFood</servlet-name>
        <url-pattern>/admin/edit-food</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowDetailsFood</servlet-name>
        <servlet-class>com.example.javsvlet.controller.ShowDetailFood</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowDetailsFood</servlet-name>
        <url-pattern>/admin/detail-food</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteFood</servlet-name>
        <servlet-class>com.example.javsvlet.controller.DeleteFood</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteFood</servlet-name>
        <url-pattern>/admin/delete-food</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditCategory</servlet-name>
        <servlet-class>com.example.javsvlet.controller.EditCategory</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditCategory</servlet-name>
        <url-pattern>/admin/edit-category</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCategory</servlet-name>
        <servlet-class>com.example.javsvlet.controller.DeleteCategory</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteCategory</servlet-name>
        <url-pattern>/admin/delete-category</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>